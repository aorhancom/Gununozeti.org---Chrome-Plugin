{
  "manifest_version": 2,
  "version": "1.0",
  "name": "Günün Özeti",
  "description": "Hasan Yaşar ile Günün Özetini kolayca takip etmenize olanak sağlar.",
  "icons": {
    "16": "assets/images/icon-16.png",
    "24": "assets/images/icon-24.png",
    "32": "assets/images/icon-32.png",
    "128": "assets/images/icon-128.png"
  },
  "browser_action": {
    "default_popup": "summaries.html"
  },
  "permissions": [
    "background", "activeTab", "https://gununozeti.org/"
  ],
  "web_accessible_resources": [
    "assets/images/gununozeti.png"
  ]
}